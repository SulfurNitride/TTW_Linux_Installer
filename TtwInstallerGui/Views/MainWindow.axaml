<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TtwInstallerGui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="750"
        x:Class="TtwInstallerGui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Universal MPI Installer"
        Width="900" Height="750"
        MinWidth="800" MinHeight="650">

    <DockPanel Margin="20">
        <!-- Header with Title and Settings Button -->
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,15">
            <Button DockPanel.Dock="Right"
                    Content="⚙️ Settings"
                    Command="{Binding OpenSettingsCommand}"
                    Width="120"
                    Height="35"
                    VerticalAlignment="Top"/>
            <StackPanel>
                <TextBlock Text="Universal MPI Installer"
                           FontSize="24"
                           FontWeight="Bold"/>
                <TextBlock TextWrapping="Wrap"
                           Foreground="Gray"
                           Margin="0,10,0,0">
                    This universal installer can install any MPI package. Select an MPI file to automatically detect required paths.
                </TextBlock>
            </StackPanel>
        </DockPanel>

        <!-- MPI File Selection -->
        <DockPanel DockPanel.Dock="Top" Margin="0,0,0,20">
            <TextBlock DockPanel.Dock="Left" Text="MPI Package:" Width="120" VerticalAlignment="Center"/>
            <Button DockPanel.Dock="Right" Content="Browse..." Width="100" Margin="10,0,0,0" Command="{Binding UniversalBrowseMpiCommand}"/>
            <TextBox Text="{Binding UniversalMpiPath}" IsReadOnly="False" Watermark="Select an MPI file (.mpi)"/>
        </DockPanel>

        <!-- MPI Info Display -->
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                <TextBox Text="{Binding UniversalMpiInfo}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Consolas,Courier New,monospace"
                         FontSize="11"/>
            </ScrollViewer>
        </Border>

        <!-- Dynamic Path Inputs -->
        <StackPanel DockPanel.Dock="Top" Spacing="12" Margin="0,0,0,20">
            <!-- FO3 Path (conditionally visible) -->
            <DockPanel IsVisible="{Binding UniversalNeedsFo3}">
                <TextBlock DockPanel.Dock="Left" Text="Fallout 3 Path:" Width="120" VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right" Content="Browse..." Width="100" Margin="10,0,0,0" Command="{Binding UniversalBrowseFo3Command}"/>
                <TextBox Text="{Binding UniversalFo3Path}" IsReadOnly="False" Watermark="Path to Fallout 3 (required)"/>
            </DockPanel>

            <!-- FNV Path (conditionally visible) -->
            <DockPanel IsVisible="{Binding UniversalNeedsFnv}">
                <TextBlock DockPanel.Dock="Left" Text="Fallout NV Path:" Width="120" VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right" Content="Browse..." Width="100" Margin="10,0,0,0" Command="{Binding UniversalBrowseFnvCommand}"/>
                <TextBox Text="{Binding UniversalFnvPath}" IsReadOnly="False" Watermark="Path to Fallout New Vegas (required)"/>
            </DockPanel>

            <!-- Oblivion Path (conditionally visible) -->
            <DockPanel IsVisible="{Binding UniversalNeedsOblivion}">
                <TextBlock DockPanel.Dock="Left" Text="Oblivion Path:" Width="120" VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right" Content="Browse..." Width="100" Margin="10,0,0,0" Command="{Binding UniversalBrowseOblivionCommand}"/>
                <TextBox Text="{Binding UniversalOblivionPath}" IsReadOnly="False" Watermark="Path to Oblivion (required)"/>
            </DockPanel>

            <!-- Output Path (always visible) -->
            <DockPanel IsVisible="{Binding UniversalNeedsOutput}">
                <TextBlock DockPanel.Dock="Left" Text="Output Folder:" Width="120" VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right" Content="Browse..." Width="100" Margin="10,0,0,0" Command="{Binding UniversalBrowseOutputCommand}"/>
                <TextBox Text="{Binding UniversalOutputPath}" IsReadOnly="False" Watermark="Where to install files (required)"/>
            </DockPanel>
        </StackPanel>

        <!-- Progress Section -->
        <StackPanel DockPanel.Dock="Top" Spacing="10" Margin="0,0,0,20">
            <DockPanel>
                <TextBlock DockPanel.Dock="Right"
                           Text="{Binding UniversalProgressText}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                <ProgressBar Value="{Binding UniversalProgressPercent}"
                             Minimum="0"
                             Maximum="100"
                             Height="30"/>
            </DockPanel>

            <Button Content="{Binding UniversalInstallButtonText}"
                    Command="{Binding StartUniversalInstallCommand}"
                    IsEnabled="{Binding UniversalMpiLoaded}"
                    HorizontalAlignment="Stretch"
                    Height="40"
                    FontSize="16"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- Log Output -->
        <Border BorderBrush="Gray" BorderThickness="1" DockPanel.Dock="Top">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Text="{Binding UniversalLogOutput}"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas,Courier New,monospace"
                         FontSize="11"
                         Background="#1E1E1E"
                         Foreground="#D4D4D4"
                         Padding="10"
                         MinHeight="300"
                         AcceptsReturn="True"/>
            </ScrollViewer>
        </Border>
    </DockPanel>

</Window>
